{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "esModuleInterop": true // provide better interoperability between ECMAScript modules and CommonJS modules - recommended by jest
  },
  "include": ["./src/**/*"]
}
